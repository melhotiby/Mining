= form_tag '/lead_form_submit', :class => "listing_form" do
  Name
  %label{:for => 'name'}= text_field_tag :name
  %br
  State
  %label{:for => 'state'}= select_tag :state, options_for_select(us_cities.unshift("Select your City"))
  %br
  Search
  %label{:for => 'choices'}= select_tag :choices, options_for_select(choices.unshift("Select your Search"))
  %br
  How far back do you want to search?
  %label{:for => 'previous_days'}= select_tag :previous_days, options_for_select(previous_days.unshift("Select how far back"))
  %br
  = submit_tag
  
  #loading_wrapper
    #loading
      %p
        = image_tag("ajax-loader.gif")